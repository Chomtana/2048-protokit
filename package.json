{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --env-mode=loose",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "migrate": "turbo run migrate --env-mode=loose",
    "start": "turbo run start --env-mode=loose",
    "docker:up": "docker compose -f docker/docker-compose.yml up",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "prisma:generate": "turbo run prisma:generate",
    "env:load": "dotenv -e ./packages/chain/src/environments/$PROTOKIT_ENV/.env -- pnpm",
    "env:development": "PROTOKIT_ENV=development pnpm env:load",
    "env:inmemory": "PROTOKIT_ENV=inmemory pnpm env:load",
    "env:sovereign": "PROTOKIT_ENV=sovereign pnpm env:load"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "dependencies": {
    "dotenv-cli": "^7.4.2"
  },
  "packageManager": "pnpm@8.6.10",
  "name": "starter-kit"
}
