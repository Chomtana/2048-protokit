{
  "name": "chain",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "watch": {
    "build-and-start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "*"
      ],
      "quiet": true
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads ./node_modules/jest/bin/jest.js",
    "test:watch": "npm run test --watchAll",
    "build": "pnpm run prisma:generate && tsc -p tsconfig.json",
    "start": "protokit start ./src/configurations.ts --logLevel ERROR",
    "start:headless": "node --loader ts-node/esm  --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --es-module-specifier-resolution=node ./dist/start.js",
    "build-and-start": "pnpm run build && pnpm run start",
    "build-and-start:local": "pnpm run build && pnpm run start --environment local",
    "dev": "npm-watch build-and-start",
    "dev:local": "npm-watch build-and-start:local",
    "migrate": "dotenv -e ../../docker/.env.sample -- npx prisma migrate deploy --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma"
  },
  "peerDependencies": {
    "@proto-kit/api": "file://../../../framework/packages/api",
    "@proto-kit/cli": "file://../../../framework/packages/cli",
    "@proto-kit/common": "file://../../../framework/packages/common",
    "@proto-kit/deployment": "file://../../../framework/packages/deployment",
    "@proto-kit/library": "file://../../../framework/packages/library",
    "@proto-kit/module": "file://../../../framework/packages/module",
    "@proto-kit/persistance": "file://../../../framework/packages/persistance",
    "@proto-kit/protocol": "file://../../../framework/packages/protocol",
    "@proto-kit/sdk": "file://../../../framework/packages/sdk",
    "@proto-kit/sequencer": "file://../../../framework/packages/sequencer",
    "o1js": "file://../../../framework/node_modules/o1js",
    "tsyringe": "file://../../../framework/node_modules/tsyringe"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@prisma/client": "^5.7.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react-dom": "^18.2.7",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint-config-custom": "workspace:*",
    "events": "^3.3.0",
    "jest": "^29.6.1",
    "jest-expect-message": "^1.1.3",
    "loglevel": "^1.8.1",
    "npm-watch": "^0.11.0",
    "path-browserify": "^1.0.1",
    "prisma": "^5.7.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "typescript": "4.9.4",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  }
}
