{
  "name": "chain",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/src/index.js",
  "watch": {
    "build-and-start": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "*"
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads ./node_modules/jest/bin/jest.js",
    "test:watch": "npm run test --watchAll",
    "build": "pnpm run prisma:generate && tsc -p tsconfig.json",
    "start": "protokit start ./dist/configurations.js --logLevel ERROR",
    "start:raw": "node --experimental-vm-modules --experimental-wasm-modules --experimental-wasm-threads --es-module-specifier-resolution=node ./dist/start.js",
    "build-and-start": "pnpm run build && pnpm run start",
    "build-and-start:local": "pnpm run build && pnpm run start --environment local",
    "dev": "npm-watch build-and-start",
    "dev:local": "npm-watch build-and-start:local",
    "migrate": "dotenv -e ../../docker/.env -- npx prisma migrate deploy --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema ./node_modules/@proto-kit/persistance/prisma/schema.prisma"
  },
  "peerDependencies": {
    "@proto-kit/api": "*",
    "@proto-kit/cli": "*",
    "@proto-kit/common": "*",
    "@proto-kit/library": "*",
    "@proto-kit/module": "*",
    "@proto-kit/protocol": "*",
    "@proto-kit/sdk": "*",
    "@proto-kit/sequencer": "*",
    "o1js": "0.13.1",
    "tsyringe": "^4.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/react-dom": "^18.2.7",
    "@prisma/client": "^5.7.1",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint-config-custom": "workspace:*",
    "events": "^3.3.0",
    "jest": "^29.6.1",
    "jest-expect-message": "^1.1.3",
    "loglevel": "^1.8.1",
    "npm-watch": "^0.11.0",
    "path-browserify": "^1.0.1",
    "prisma": "^5.7.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.1.1",
    "tsconfig": "workspace:*",
    "typescript": "4.9.4",
    "url": "^0.11.1",
    "util": "^0.12.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.1",
    "dotenv-cli": "^7.4.2"
  }
}
